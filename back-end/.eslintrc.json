{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "quotes": [
      1,
      "double",
      {
        "avoidEscape": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "new-cap": 0,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "semi": [
      2,
      "never"
    ],
    "max-len": [
      2,
      {
        "code": 120
      }
    ],
    "indent": [
      "warning",
      4
    ]
  }
}